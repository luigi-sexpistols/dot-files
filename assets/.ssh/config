Host *
	ServerAliveInterval 200
	ServerAliveCountMax 2
	# IdentitiesOnly yes

#==========#
# PERSONAL #
#==========#

Host *.luigi
	UserKnownHostsFile ~/.ssh/luigi/known_hosts

Host pi.luigi
	HostName 192.168.1.105
	User pi
	IdentityFile ~/.ssh/luigi/pi.pem

#===========#
# GIT HOSTS #
#===========#

# to use a different ssh key per project, tell git to clone from the alias for that project
# git clone git@github.luigi:user/repo.git
#               ^^^^^^^^^^^^

Host tus.bitbucket.org bitbucket.tus
	HostName bitbucket.org
	IdentityFile ~/.ssh/tus/tus-bitbucket.pem

Host gb.bitbucket.org bitbucket.gb
	HostName bitbucket.org
	IdentityFile ~/.ssh/gb/bitbucket.pem

Host bhp.gitlab.com gitlab.bhp
	HostName gitlab.com
	IdentityFile ~/.ssh/bhp/gitlab.pem

Host luigi.github.com github.luigi
	HostName github.com
	IdentityFile ~/.ssh/luigi/github.pem

#===============#
# PROJECT HOSTS #
#===============#

# Use a shared "TLD" (e.g. *.luigi) to create a common configuration for all hosts under that domain.
# Further nuance can be added with subdomains (e.g. *.docker.luigi for local containers, perhaps).

##### GALLAGHER BASSETT #####

Host *.gb !bitbucket.gb
	User ec2-user
	UserKnownHostsFile ~/.ssh/gallagher-bassett/known_hosts

Host *.sandbox.gb !bastion.sandbox.gb
	ProxyJump bastion.sandbox.gb

Host bastion.sandbox.gb
	HostName localhost
	Port 2222
	IdentityFile ~/.ssh/gallagher-bassett/poc-vpc-bastion.pem

##### TOTAL UNIFORM SOLUTIONS #####

Host *.tus !bitbucket.tus
	UserKnownHostsFile ~/.ssh/total-uniform-solutions/known_hosts

##### BHP #####

Host *.bhp !gitlab.bhp
	UserKnownHostsFile ~/.ssh/bhp/known_hosts
